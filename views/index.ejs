<%- include('head') -%>
<%- include('header') -%>
<%- include('navbar') -%>
<div>
    <h1 class="display-3 text-center">Tavak listája</h1>
    <!--Card grid-->
    <div class ="container">

    <div class ="row">
            <% lakeList.forEach((lake)=> { %>
        <div class="col">
                    <div class="card border-primary my-5" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= lake.name %></h5>
                            <p class="card-text"><%= lake.description %></p>
                            <a href="/lake/get/<%= lake._id %>" class="btn btn-outline-secondary">Megtekintés</a>
                            <a href="/lake/delete/<%= lake._id %>" class="btn btn-outline-danger">Törlés</a>
                        </div>
                    </div>
        </div>
        <% });%>
        </div>

    </div>
    <div class="d-flex justify-content-end px-5 my-5">
        <a class="btn btn-outline-primary" href="/lake/new" role="button">Tó hozzáadása</a>
    </div>
</div>
<%- include('end') -%>