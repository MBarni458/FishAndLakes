<%- include('head') -%>
<%- include('header') -%>
<%- include('navbar') -%>
<div>
    <h1 class="display-3 text-center">Halak listája</h1>
    <!--Card grid-->
    <div class ="container">
    <div class ="row">
        <!--Fish card-->
        <%fishList.forEach((fish)=> {%>

            <div class="col">
                <div class="card border-primary my-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title  display-4"><%=fish.name%></h5>
                        <a href="/fish/get/<%=fish._id%>" class="btn btn-outline-secondary">Megtekintés</a>
                        <a href="/fish/delete/<%=fish._id%>" class="btn btn-outline-danger">Törlés</a>
                    </div>
                </div>
            </div>
        <%});%>
    </div>
    </div>
    <div class="d-flex justify-content-end px-5 my-5">
        <a class="btn btn-outline-primary" href="/fish/new" role="button">Hal hozzáadása</a>
    </div>
</div>
<%- include('end') -%>